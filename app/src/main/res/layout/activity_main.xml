<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bdc3c7"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity"
    tools:ignore="contentDescription">

    <TextView
        android:id="@+id/Txt_I_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:text="@string/title_I_am"
        android:textColor="#7f8c8d"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/Txt_poor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/Txt_I_am"
        android:layout_toRightOf="@+id/Txt_I_am"
        android:text="@string/title_poor"
        android:textAllCaps="false"
        android:textColor="#ffcc0000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_coal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/coal" />
</RelativeLayout>
